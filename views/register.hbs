 <div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Sign Up</h5>
                    <p>Please fill out this form to create an account.</p>
                    {{!-- <div style="color:red">                  
                    {{#if errors}}
                        {{#each errors}}
                            {{this.msg}} <br>
                        {{/each}}
                    {{/if}}
                    </div>
                    <div> --}}

                    {{!-- </div> --}}
 
                    <form action="" method="POST" encType="multipart/form-data">
                        <!--Get First Name-->

                        <div class="form-group">
                            <label>First Name</label>
                            <input type="text" name="fname" class="form-control" >
                        </div>  
                        {{#if errors.fname}} 
                            <div class="alert alert-danger">
                                {{errors.fname.msg}}
                            </div>
                        {{/if}}
                        <!--Get Last Name-->
                        <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" name="lname" class="form-control" >
                        </div>  
                        {{#if errors.lname}} 
                            <div class="alert alert-danger">
                                {{errors.lname.msg}}
                            </div>
                        {{/if}}

                        <!-- get DOB -->
                        <div class="form-group">
                            <label>Classification:</label>
                               <select name="class">
                                <option value="admin">Freshman</option>
                                <option value="mentee">Sophomore</option>
                                <option value="mentor">Junior</option>
                                <option value="alumniMentor">Senior</option>
                            </select> 
                        </div>
                        {{#if errors.class}} 
                            <div class="alert alert-danger">
                                {{errors.class.msg}}
                            </div>
                        {{/if}}                        
                        <!--Get User Role-->
                        {{!--
                             for now this can be chosen but in the future user roles will be determined by
                             the survey.
                         --}}
                        <div class="form-group">
                            <label>Register as: </label>
                            <select name="userRole">
                                <option value="admin">Admin</option>
                                <option value="mentee">Mentee</option>
                                <option value="mentor">Mentor</option>
                                {{!-- <option value="alumniMentor">Alumni Menotor</option> --}}
                            </select> 
                        </div>  

                        
                        <!--Get Email-->
                        <div class="form-group">
                            <label>Email Address</label>
                            <input type="text" name="email" class="form-control" >
                        </div>  
                        {{#if errors.email}} 
                            <div class="alert alert-danger">
                                {{errors.email.msg}}
                            </div>
                        {{/if}}
                        <!--Get User Name-->
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" name="username" class="form-control">
                        </div> 
                        {{#if errors.username}} 
                            <div class="alert alert-danger">
                                {{errors.username.msg}}
                            </div>
                        {{/if}} 
                        <!--Get Password-->
                        <div class="form-group ">
                            <label>Password</label>
                            <input type="password" name="password" class="form-control">
                        </div>
                        {{#if errors.password}} 
                            <div class="alert alert-danger">
                                {{errors.password.msg}}
                            </div>
                        {{/if}}
                        <!--Confirm Password-->
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input type="password" name="passwordConfirm" class="form-control">
                        </div>
                        {{#if errors.passwordConfirm}} 
                            <div class="alert alert-danger">
                                {{errors.passwordConfirm.msg}}
                            </div>
                        {{/if}}
                        <div class="form-group">
                            <label>Picture</label>
                            <input type="file" accept=".jpeg,.png,.jpg"  name="userPhoto" class="form-control">
                        </div>
                        {{#if errors.userPhoto}} 
                            <div class="alert alert-danger">
                                {{errors.userPhoto.msg}}
                            </div>
                        {{/if}}
                        <br>
                        <div class="form-group">
                            <input type="submit" class="btn" value="Submit">
                            <input type="reset" class="btn" onclick="window.location.href='register'" value="Reset">
                        </div>

                        <p>Already have an account? <a style="color:orange;" onclick="window.location.href='login'">Login here</a>.</p>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br><br><br><br><br>
</div>
